div.row(ng-show='thisIsMe')
  div.col-sm-12
    p Check here if the profile is complete
div.row(style='background-color:#44d0ff; min-height:200px')
  div.col-sm-8
    div
      h1 EDIIIIT {{test}} Profile {{profile}}
      span Subject this guy teaches
  div.col-sm-4.thumbnail(flow-init)
    img(flow-img='$flow.files[0]')
    p We will have a photo here
    input(type='file', flow-btn)
    span.flow-btn Upload file
div.row(ng-repeat='(key, value) in profile' )
  div.col-sm-12(ng-show='value.length')
    md-toolbar.md-theme-light
      h1.md-toolbar-tools
        span {{ PrettyName(key) }}
    md-content
      md-list
        md-item(ng-repeat="item in [].concat(value)")
          md-item-content
            div.md-title-content
              h4 {{item}}
          md-divider(ng-if='!$last')
