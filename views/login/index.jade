block head
   title Login
block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Sign In
      div#login
      form(ng-submit='login(form)', name='form')
        div.form-group
          input.form-control(
            type='text',
            name='username',
            placeholder='Username',
            ng-model='user.username',
            required,
            autofocus
          )
          p.help-block(ng-show='form.username.$error.mongoose')
          | {{errors.username}}
        div.form-group
          input.form-control(
            type='password',
            name='password',
            placeholder='Password',
            ng-model='user.password',
            required
          )
          p.help-block(ng-show='form.password.$error.mongoose')
          | {{errors.password}}
        div.form-group.has-error
          p {{ error.other }}
        div.form-actions
          button.btn.btn-primary.btn-login(type='submit') Sign In
          a.btn.btn-link(href='/login/forgot/') Forgot your password?
