extends ../layouts/layout
block head
   title Login
block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Sign In
      div#login
      form
        div.form-group
          label.control-label Username or Email:
          input.form-control(type='text', name='username')
        div.form-group
          label.control-label Password:
          input.form-control(type='password', name='password')
        div.form-actions
          button.btn.btn-primary.btn-login(type='button') Sign In
          a.btn.btn-link(href='/login/forgot/') Forgot your password?
